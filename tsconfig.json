{
  "compilerOptions": {
    "target": "ESNext", // Or higher, depending on the features you need
    "module": "commonjs", // Allows ECMAScript Modules (ESM)
    "esModuleInterop": true, // Allows importing CommonJS modules from ESM
    "allowSyntheticDefaultImports": true, // Allows default imports from modules with no default export
    "strict": true, // Optional: Enables strict type checking
    "moduleResolution": "node", // Resolves modules using Node.js resolution algorithm
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "lib": ["ESNext"], // Specifies the libraries to be included in the compilation
    "declaration": true, // Generates corresponding .d.ts files
    "rootDir": "./src", // Specify the root directory of input files
    "outDir": "./dist", // Redirect output structure to the directory
    "declarationDir": "./dist", // Output directory for .d.ts files
    "incremental": true // Enable incremental compilation
  },
  "include": ["src/**/*.ts"], // Include your TypeScript source files
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"] // Exclude test files
}
